<div id="contact_popup">
  <p class="btn-holder">
    <a id="contact_popup_opener" href="#" class="opener hidden-xs">Contact </a>
    <a id="contact_modal_opener" href="<%= new_contact_path %>" class="opener visible-xs">Contact </a>
  </p>
  <div class="contact_content">
    <div class="col-md-12">
      <p class="bodytext">
        <%= raw SiteSetting.last.contact_form_text %>
        <% if can? :edit, SiteSetting.last %>
          <%= link_to "edit", [:edit, SiteSetting.last] %>
        <% end %>
      </p>
      <em>

        <%= form_for @contact do |f| -%>

          <div class="form-group">
            <%= f.text_field :name, class: "form-control", placeholder: "Ihr Name" %>
          </div>
          
          <div class="form-group">
            <%= f.text_field :company, class: "form-control", placeholder: "Ihr Unternehmen"  %>
          </div>
          
          <div class="form-group">
            <%= f.email_field :email, class: "form-control", placeholder: "Ihre E-Mail-Adresse"  %>
          </div>
          
          <div class="form-group">
            <%= f.text_field :tel, class: "form-control", placeholder: "Ihre Telefonnummer"   %>
          </div>

          <%= f.hidden_field :message, value: "Bitte rufen Sie mich an"   %>
          
          <button type="submit" class="btn btn-primary"><i class="icon-ok"></i>Absenden</button>

        <% end %>

      </em>
    </div>
  </div>
</div>