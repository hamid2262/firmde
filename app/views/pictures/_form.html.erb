<%= simple_form_for [@page, @picture], wrapper: :bootstrap, html: {class: '' }, 
  defaults: {
    input_html: { class: 'form-control' }
  } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <div class="form-inputs">
    <%= f.input :category %>
  </div>

  <div class="form-inputs">
    <%= f.input :img %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
