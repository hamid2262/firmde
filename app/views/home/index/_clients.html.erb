<div class="row margin-bottom-40 our-clients">
  <div class="col-md-3">
    <h2><a href="#">Unsere Kunden</a></h2>
  </div>
  <div class="col-md-12">
    <div class="owl-carousel owl-carousel6-brands">
      <% Kunden.order(:position).each do |kunde| %>
        <div class="client-item">
          <a href="#">
            <%= image_tag(kunde.photo_gray.url, class: "img-responsive") %>
            <%= image_tag(kunde.photo.url, class: "color-img img-responsive") %>
          </a>
          <% if can? :edit, kunde %>
            <%= link_to "Edit", edit_kunden_path(kunde) %>
          <% end %>
        </div>        
      <% end %>
    </div>
  </div>          
</div>