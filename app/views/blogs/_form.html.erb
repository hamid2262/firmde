<%= simple_form_for @blog, wrapper: :bootstrap, html: {class: '' }, 
  defaults: {
    input_html: { class: 'form-control' }
  } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, hint: '® ---> <sup>®</sup>' %>
    <%= f.input :brief_txt, hint: 'Kurztext Maximum  400 char' %>
<!--     <div class="form-group">
      <%#= f.label :brief_txt, "Brief Text" %>
      <%#= f.text_area :brief_txt, class: "form-control", rows: 3 %><br />
    </div> -->
    <%= f.input :body, label: false, input_html:{class: 'summernote'} %>
    <%= f.input :category, collection: NEWS_CATEGORIES, include_blank: false %>
    <%= f.input :slug %>
    <%= f.input :photo, label:"theme Bild" , as: :file, hint: 'Theme Bild. Best size 850x260' %>
    <%= f.input :thmb_img, label:"Thumbnail Bild", as: :file, hint: 'Thumbnail Bild. Best size 260x195' %>
    <%= f.date_field :my_date %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
