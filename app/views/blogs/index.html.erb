<div id="blogs_index" class="main">
  <div class="container">
    <%= render 'breadcrumb' %>
    <div class="row margin-bottom-40">
      <div class="col-md-12 col-sm-12">
        <h1>News Page</h1>
          <div class="row">
            <div class="col-md-9 col-sm-9 blog-posts">
              <% @blogs.each do |blog| %>
                <%= render 'blogs/index/blog', blog: blog %>
              <% end %>
              <%= render 'shared/paginate', items: @blog %>            
            </div>

            <div class="col-md-3 col-sm-3 blog-sidebar">
              <%= render 'categories' %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>