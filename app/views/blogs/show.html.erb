<% @page_title= @blog.title %>
<div class="blog_show">
  <div class="row">
    <div class="col-md-9 col-sm-9 blog-item">
      <h1> <%= @blog.title %></h1>
      <%= render 'blogs/show/image' %>
      <%= render 'breadcrumb' %>
      <div class="datum">
        <%= @blog.display_date %> <i class="fa fa-calendar"></i>
      </div>
      <p><%= raw @blog.body %></p>

      <% if can? :edit, @blog %>
        <%= link_to 'Edit', edit_blog_path(@blog),class: "btn btn-success" %> 
      <% end %>
    </div>
    
    <div class="col-md-3 col-sm-3 blog-sidebar">
      <%= render 'categories' %>
    </div>
  </div>
</div>