<%= simple_form_for [@page, @sub_page], wrapper: :bootstrap, 
  defaults: {
    input_html: { class: 'form-control' }
  }  do |f| %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :seo_title %>
    <%= f.input :body, input_html:{class: 'summernote'} %>
    <%#= f.association :page %>
    <p>page: <%= "#{@sub_page.page.id}-#{@sub_page.page.title}" %></p>
    <%= f.input :order %>
    <%= f.input :slug %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
