<%= simple_form_for @kunden, wrapper: :bootstrap, 
  defaults: {
    input_html: { class: 'form-control' }
  } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :url %>
    <%= f.input :photo, as: :file, hint: 'width: 159 pixel, height: 101 pixel. Es soll Farbbild und transparent sein.'  %>

    <%= f.input :photo_gray, as: :file, hint: 'width: 159 pixel, height: 101 pixel. Es soll grau (Schwarz-WeiÃŸ) und transparent sein.'  %>

    <%= f.input :ref_image, as: :file, hint: 'raferences page'  %>

    <%= f.input :city  %>
    <%= f.input :brief_details, as: :text  %>


  </div>

  <div class="row">
    <div class="col-xs-2">
      <%= link_to  kundens_path, class: "btn btn-default btn-block" do %>
        <i class=" fa fa-arrow-left"></i>
        Back
      <% end %>
    </div>
    <div class="col-xs-2">
      <%= f.button :submit, class: "btn btn-success btn-block"  %>
    </div>
  </div>
  
<% end %>
